{
  "name": "ocap-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/angular/src",
  "prefix": "metad-ocap",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/angular/ng-package.json",
        "tailwindConfig": "packages/angular/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/angular/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production",
      "dependsOn": [
        {
          "projects": ["ngx-echarts"],
          "target": "build",
          "params": "ignore"
        },
        {
          "projects": ["duckdb"],
          "target": "build",
          "params": "ignore"
        },
        {
          "projects": ["echarts"],
          "target": "build",
          "params": "ignore"
        }
      ]
    },
    "build-lib": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "configurations": {
        "production": {
          "commands": [
            "nx run ocap-angular:build:production",
            "tailwindcss -c packages/angular/tailwind.config.js -i ./packages/angular/_index.scss -o ./dist/packages/angular/index.css -m"
          ],
          "parallel": false
        },
        "development": {
          "commands": [
            "nx run ocap-angular:build:development",
            "tailwindcss -c packages/angular/tailwind.config.js -i ./packages/angular/_index.scss -o ./dist/packages/angular/index.css"
          ],
          "parallel": false
        }
      },
      "defaultConfiguration": "production"
    },
    "build-prod": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "configurations": {
        "production": {
          "commands": [
            "rm -rf dist/packages/angular",
            "nx run ocap-angular:build-lib:production"
          ],
          "parallel": false
        },
        "development": {
          "commands": [
            "rm -rf dist/packages/angular",
            "nx run ocap-angular:build-lib:development"
          ],
          "parallel": false
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/angular/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/angular/**/*.ts", "packages/angular/**/*.html"]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 6006,
        "configDir": "packages/angular/.storybook",
        "browserTarget": "ocap-angular:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/angular",
        "configDir": "packages/angular/.storybook",
        "browserTarget": "ocap-angular:build-storybook",
        "compodoc": false,
        "styles": ["packages/angular/_index.scss", "apps/cloud/src/styles.scss"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "ocap-angular:build-storybook",
        "staticFilePath": "dist/storybook/angular"
      },
      "configurations": {
        "ci": {
          "buildTarget": "ocap-angular:build-storybook:ci"
        }
      }
    }
  }
}
